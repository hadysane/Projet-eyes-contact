{% extends 'base.html.twig' %}

{% block title %} {{product.name}} {% endblock %}

{% block body %}
{% include 'navbar/index.html.twig' %}

<div class="container mx-auto">

    <div class="my-20 font-inter text-grey-700">
        <a class="font-inter text-grey-700" href="{{path('app_lunette_de_vue_all')}}">Lunttes de vue</a>  >  <a class="font-inter text-grey-700" href="{{path('app_lunette_de_vue_slug', {slug:"femmes"})}}" > Femme</a> > Lunette de vue Femme
    </div>

    <h1 class="font-inter text-4xl mt-20"> {{product.name}}</h1>

    <div class="flex gap-12">
        <div class="w-full">
            <img class="w-full" src="{{ asset('images/product-images/Lunettes_de_vue/lunette01.jpg')}}" alt="lunette01">
        </div>

        <div>
            <div class="flex gap-14">
                <div class="font-inter">
                    <p class="font-semibold mb-2">Prix</p>
                    <p> {{ product.prix }} € </p>
                </div>

                <div>
                    <p class=" font-inter font-semibold mb-2">Quantités</p>
                    <div class=" xl:w-96">
                        <select class="form-select appearance-none block
                        w-full
                        px-3
                        py-1.5
                        text-base
                        font-normal
                        text-gray-700
                        bg-white bg-clip-padding bg-no-repeat
                        border border-solid border-gray-300
                        rounded
                        transition
                        ease-in-out
                        m-0
                        focus:text-gray-700 focus:bg-white focus:border-blue-footer focus:outline-none" aria-label="Default select example">
                            <option selected>selectionner la quantité </option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="3">4</option>
                        </select>
                    </div>
                </div>
            
            </div>

            <div class="mt-20 mb-28 font-inter">
                <p class="mb-3 font-semibold">Description</p>

                <p> {{ product.description }} </p>
            </div>

            <button class="btn-primary">Ajouter</button>
        </div>
    </div>

    <div class="mt-32 flex flex-col justify-center align-middle">

        <h3 class="font-inria-serif text-2xl text-center mb-16">Articles similaires</h3>

        <div class="main-tab">
            {% for product in articles_similaire %}
                <div class="card">
                    <a href="{{path('app_product_show', {id: 1})}}">
                        <img class="card-tab" src="{{ asset('images/product-images/Lunette_de_soleil/lunette01.jpg')}}" alt="lunette01">
                        <h2 class="title-card">{{ product.name }}</h2>
                        <p class="price">{{ product.prix }}€</p>
                    </a>
                    <button class="btn-card" type="submit">Ajouter</button>
                </div>
            {% endfor %}
        </div>

    </div>
  
</div>

{% include 'footer/footer.html.twig' %}
{% endblock %}
