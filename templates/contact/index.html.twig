{% extends 'base.html.twig' %}

{% block title %} Eyes Contact | Nous contactez{% endblock %}

{% block body %}

 


<div class="container md:container md:mx-auto mt-4">

    <h1 class="font-inria-serif text-4xl">Contact</h1>
    <p class="font-inria-serif mt-8">Pour toutes questions et informations, veuillez nous contacter afin de vous répondre au mieux.</p>
    
    <div class="mt-20">
        {% for message in app.flashes('success') %}
            <div class="bg-green-200 border-spacing-1 text-green-900 mb-8">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form,{'attr': {'class':'w-full'}}) }}

         {{ form_errors(form) }}

        <div class="flex flex-row  gap-56 mb-5 justify-between ">
            <div class="w-full">
                {{ form_label(form.prenom, 'Prénom :', { 'label_attr': {'class':'control-label'}}) }}
                {{ form_widget(form.prenom, { 'attr': {'class':'control-input'}}) }}
            </div>
            <div class="w-full">
                {{ form_label(form.nom, 'Nom :', { 'label_attr': {'class':'control-label'}}) }}
                {{ form_widget(form.nom, { 'attr': {'class':'control-input'}}) }}
            </div>
        </div>

        <div class="flex  flex-row gap-56 mt-5 mb-16 justify-between ">
            <div class="w-full">
                {{ form_label(form.email, 'Adresse email :', { 'label_attr': {'class':'control-label'}}) }}
                {{ form_widget(form.email, { 'attr': {'class':'control-input'}}) }}
            </div>
            <div class="w-full">
                {{ form_label(form.mobile, 'Numéro de mobile :', { 'label_attr': {'class':'control-label'}}) }}
                {{ form_widget(form.mobile, { 'attr': {'class':'control-input'}}) }}
            </div>
        </div>

        <div class="w-full">
            {{ form_label(form.message, 'Votre message :', { 'label_attr': {'class':'control-label'}}) }}
            {{ form_widget(form.message, { 'attr': {'class':'control-input'}}) }}
        </div>
       

        <div class="flex flex-row mt-20 gap-8">
            <a class="btn-secondary" href="/">Annuler</a>
            <button class="btn-primary">{{ button_label|default('Envoyer') }}</button>
        </div>
        {{ form_end(form) }}
    </div>


</div>
{% endblock %}
