<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}


    </head>
    <body>

        {% block header %}

        <div class="navbar-menu">
            <img class="logo" src="{{ asset('images/EYES_CONTACT.jpg')}}" alt="logo_eyes_contact">
        
            <div class="dropdown">
                <span class="title-nav">Lunettes de vue</span>
                <div class="dropdown-content">
                    <a class="link-content" href=""><p>Femmes</p></a>
                    <a class="link-content" href=""><p>Hommes</p></a>
                    <a class="link-content" href=""><p>Enfants</p></a>
                </div>
                <i class="fa fa-angle-down" aria-hidden="true"></i>{# icon flèche du bas  #}
            </div>
            <div class="dropdown">
                <span class="title-nav">Lunettes de soleil</span>
                <div class="dropdown-content">
                    <a class="link-content" href=""><p>Femmes</p></a>
                    <a class="link-content" href=""><p>Hommes</p></a>
                    <a class="link-content" href=""><p>Enfants</p></a>
                </div>
                <i class="fa fa-angle-down" aria-hidden="true"></i>{# icon flèche du bas  #}
            </div>
            <div class="dropdown">
                <span class="title-nav">Lentille</span>
                <div class="dropdown-content">
                    <a class="link-content" href=""><p>Femmes</p></a>
                    <a class="link-content" href=""><p>Hommes</p></a>
                    <a class="link-content" href=""><p>Enfants</p></a>
                </div>
                <i class="fa fa-angle-down" aria-hidden="true"></i>{# icon flèche du bas  #}
            </div>
        
            <div class="">
               <a class="link-content" href={{path('app_contact')}}><span class="title-nav">Contact</span> </a>
            </div>
        
            <div class="link-log">
                <a class="link-register" href={{path('app_register')}}>Inscription</a> /
                <a class="link-login" href="">Connexion</a>
            </div>
        
            <div class="img-basket">
                <a href=""><i class="fa fa-shopping-basket" aria-hidden="true"></i></a>{# icon du panier  #}
            </div>
        
        
        </div>

        {% endblock header %}



        {% block body %}{% endblock %}

        {% block footer %}
            <footer class="footer">
                <div class="container  mx-auto mt-4  ">
                    <div class="flex flex-wrap justify-between xs:gap-10 text-white">
                    {# blocs footer #}
                        <div class="flex flex-col">
                            <h4>Shop</h4>
                            <ul>
                                <li> <a> Lunnettes de vue <i class="fa-solid fa-angle-right"></i></a> </li>
                        
                                <li>  <a> Lunnettes de soleil <i class="fa-solid fa-angle-right"></i></a> </li>

                                <li>  <a> Lentilles <i class="fa-solid fa-angle-right"></i> </a> </li>
                            </ul>
                        </div>

                        <div>
                            <h4>Contact</h4>

                            <ul>
                                <li>   <a href="{{ path('app_contact') }}"> Besoin d'aide ?</a> </li>
                            </ul>
                        
                        </div>

                        <div>
                            <h4>Conditions</h4>

                            <ul>
                                <li>  <a> Nos conditions d'utilisateurs</a> </li>
                            </ul>

                        </div>

                        <div>
                            <h4>Langues</h4>

                            <ul>
                                <li>  <a> Français </a>  </li>
                        
                                <li>  <a> Anglais </a> </li>

                                <li>  <a> Allemand </a> </li>
                            </ul>
                        
                        </div>
                    
                    </div>
                    {# social media #}
                    <div class="flex  justify-center gap-3">
                        <div> <a href="https://www.instagram.com/"> <img class="w-12" src="{{ asset('images/social-media/instagram.png')}}" alt="instagram - eyes contact"> </a> </div>
                        <div> <a href="https://www.twitter.com/" > <img class="w-12" src="{{ asset('images/social-media/twitter.png')}}" alt="twitter - eyes contact"> </a> </div>
                        <div> <a href="https://www.youtube.com/"> <img class="w-12" src="{{ asset('images/social-media/youtube.png')}}" alt="chaine youtube - eyes contact"> </a> </div>
                        <div>  <a href="https://www.facebook.com/"> <img class="w-12" src="{{ asset('images/social-media/facebook.png')}}" alt=" facebook - eyes contact"> </a> </div>
                    
                    </div>

                    {# Company eyes contact #}
                    <div class="flex items-center py-4 sm:px-0 md:px-64 lg:px-64 mt-5">
                        <!-- The left line -->
                        <div class="flex-grow h-px bg-white"></div> 

                        <!-- Your text here -->
                        <span class="flex-shrink text-2xl px-8 sm:px-6 xs:px-2  font-inria-serif">Compagny Eyes Contact</span>

                        <!-- The right line -->
                        <div class="flex-grow h-px bg-white"></div>
                    </div>
                </div>
            </footer>
        {% endblock %}
    </body>
</html>
