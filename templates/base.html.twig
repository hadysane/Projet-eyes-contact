<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}


    </head>
    <body>

        {% block header %}

        <div class="navbar-menu">
            <img class="logo" src="{{ asset('images/EYES_CONTACT.jpg')}}" alt="logo_eyes_contact">
        
            <div class="dropdown">
                <span class="title-nav">Lunettes de vue</span>
                <div class="dropdown-content">
                    <a class="link-content" href=""><p>Femmes</p></a>
                    <a class="link-content" href=""><p>Hommes</p></a>
                    <a class="link-content" href=""><p>Enfants</p></a>
                </div>
                <i class="fa fa-angle-down" aria-hidden="true"></i>{# icon flèche du bas  #}
            </div>
            <div class="dropdown">
                <span class="title-nav">Lunettes de soleil</span>
                <div class="dropdown-content">
                    <a class="link-content" href=""><p>Femmes</p></a>
                    <a class="link-content" href=""><p>Hommes</p></a>
                    <a class="link-content" href=""><p>Enfants</p></a>
                </div>
                <i class="fa fa-angle-down" aria-hidden="true"></i>{# icon flèche du bas  #}
            </div>
            <div class="dropdown">
                <span class="title-nav">Lentille</span>
                <div class="dropdown-content">
                    <a class="link-content" href=""><p>Femmes</p></a>
                    <a class="link-content" href=""><p>Hommes</p></a>
                    <a class="link-content" href=""><p>Enfants</p></a>
                </div>
                <i class="fa fa-angle-down" aria-hidden="true"></i>{# icon flèche du bas  #}
            </div>
        
            <div class="">
               <a class="link-content" href={{path('app_contact')}}><span class="title-nav">Contact</span> </a>
            </div>
        
            <div class="link-log">
                <a class="link-register" href={{path('app_register')}}>Inscription</a> /
                <a class="link-login" href="">Connexion</a>
            </div>
        
            <div class="img-basket">
                <a href=""><i class="fa fa-shopping-basket" aria-hidden="true"></i></a>{# icon du panier  #}
            </div>
        
        
        </div>

        {% endblock header %}



        {% block body %}{% endblock %}
    </body>
</html>
