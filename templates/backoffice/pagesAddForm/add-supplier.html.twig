{% extends 'base.html.twig' %}

{% block title %}Eyes Contact - Backoffice{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('backoffice-pages-addUpdate-form') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('backoffice-pages-addUpdate-form') }}
{% endblock %}

{% block body %}
    {{include('backoffice/components/_topbar.html.twig')}}
    {{include('backoffice/components/_sidebar.html.twig')}}

    <main>
        <div id="backoffice-pageHero">
            <h1>Ajouter un fournisseur</h1>
            <h2>Ajouter un nouveau fournisseur à la liste</h2>
            <div class="separator_xl"></div>
        </div>

        <div id="mainContent">
            <div class="adding_form">
                <form action="" method="post">
                    <label>Nom
                        <input id="name" type="text" name="name">
                    </label>
                    <label>Ville
                        <input id="ville" type="text" name="ville">
                    </label>
                    <label>Pays
                        <input id="pays" type="text" name="pays">
                    </label>
                    <label>N° Téléphone
                        <input id="phone" type="text" name="phone">
                    </label>
                    <label>Adresse email
                        <input id="email" type="text" name="email">
                    </label>
                    <br>
                    <input type="submit" value="Ajouter"/>
                </form>
            </div>
        </div>
    </main>

    <script>
        //Classe active sur la bonne rubrique
        let myMenu = document.querySelectorAll("#backoffice_sidebar_mainMenu ul li");
        myMenu[0].classList.remove("active")
        myMenu[4].classList.add("active")
    </script>

{% endblock %}
